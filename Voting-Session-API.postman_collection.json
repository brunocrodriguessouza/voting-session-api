			"item": [
				{
					"name": "Criar Pauta",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('agendaId', response.id);",
									"    pm.collectionVariables.set('agendaId', response.id);",
									"    console.log('Agenda criada com ID:', response.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Pauta sobre orçamento anual\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/agendas",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"agendas"
							]
						},
						"description": "Cria uma nova pauta para votação. O ID da pauta é salvo automaticamente na variável agendaId."
					},
					"response": []
				},
				{
					"name": "Obter Resultado da Votação",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/agendas/{{agendaId}}/result",
							"host": [
